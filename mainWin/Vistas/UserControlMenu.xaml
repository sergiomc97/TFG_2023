                <DataTemplate>
                    <ContentControl>

                        <Button Click="Button_Click_4"
                                Padding="10"
                                BorderThickness="1"
                                Style="{StaticResource NoHoverButtonStyle}">
                            <StackPanel Margin="10"
                                        x:Name="stackpanel"
                                        Orientation="Horizontal">
                                <fa:ImageAwesome Icon="{Binding Icon}"
